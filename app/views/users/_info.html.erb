<h2>User info</h2>
  <div>
    <%= image_tag user.get_profile_image(100,100) %>
  </div>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th> <%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary col-md-12" do %>
        <i class="fas fa-user-cog" aria-hidden="true"></i>
      <% end %>
    </div>





<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
<div class="form-group">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>

